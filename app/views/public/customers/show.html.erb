<div class="container">
      <h2>マイページ</h2>
      <div class="row">
      <div class="col-xs-10 col-xs-offset-1"style="margin-top: 50px;">
      <span class="font">登録情報</span>
  			<%= link_to "編集する", edit_public_customer_path(@customer), class: "btn btn-success"%>&ensp;


        <table class="table table-bordered">
          <thead>
            <tr class="table-head" style="background-color:#F5F5F5;">
              <th scope="col">氏名</th>
              <td style><%= @customer.first_name %>&ensp;<%= @customer.last_name %></td>
            </tr>
            <tr class="table-head" style="background-color:#F5F5F5;">
              <th scope="col">カナ</th>
              <td style><%= @customer.first_name_kana %>&ensp;<%= @customer.last_name_kana %></td>
            </tr>
            <tr class="table-head" style="background-color:#F5F5F5;">
              <th scope="col">郵便番号</th>
              <td style><%= @customer.postal_code %></td>
            </tr>
            <tr class="table-head" style="background-color:#F5F5F5;">
              <th scope="col">住所</th>
              <td style><%= @customer.address %></td>
            </tr>
            <tr class="table-head" style="background-color:#F5F5F5;">
              <th scope="col">電話番号</th>
              <td style><%= @customer.telephone_number %></td>
            </tr>
            <tr class="table-head" style="background-color:#F5F5F5;">
              <th scope="col">メールアドレス</th>
              <td style><%= @customer.email %></td>
            </tr>
          </thead>
	      </table>

<div class="row">
	<span class="font">配送先</span>
	  <%= link_to "一覧を見る", public_addresses_path, class: "btn btn-primary" %><br />
	<span class="font">注文履歴</span>
	   <%#= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
</div>
</div>
</div>
</div>
