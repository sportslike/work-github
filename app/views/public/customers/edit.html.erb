<div class="container">
 	<div class="row">
    	<div class="col-xs-9 edit-info">
			<h2>登録情報編集</h2>

				<%= form_for @customer, url: public_customer_path do |f| %>

				<table class="edit_info-table">
				  <tbody>
					<tr>
			          <td>名前</td>
			          <td>(姓)</td>
			          <td class="customer-name_form">
						<%= f.text_field :first_name, autofocus: true, autocomplete: "email" %>
					  </td>
					  <td></td>
			          <td>(名)</td>
			          <td>
						<%= f.text_field :last_name, autofocus: true, autocomplete: "email" %>
					  </td>
	        		</tr>

				 	<tr>
			          <td>フリガナ</td>
			          <td>(セイ)</td>
			          <td class="customer-name_form">
						<%= f.text_field :first_name_kana, autofocus: true, autocomplete: "email" %>
					  </td>
			          <td width="50"></td>
			          <td>(メイ)</td>
			          <td>
						<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "email" %>
					  </td>
        			</tr>


				  	<tr>
			          <td>郵便番号(ハイフンなし)</td>
			          <td></td>
			          <td>
						<%= f.text_field :postal_code, autofocus: true, autocomplete: "email" %>
					  </td>
        			</tr>

				 	<tr>
			          <td>住所</td>
			          <td></td>
			          <td colspan="4">
					    <%= f.text_field :address, autofocus: true, autocomplete: "email" %>
					  </td>
			   	    </tr>


				 	<tr>
			          <td>電話番号(ハイフンなし)</td>
			          <td></td>
			          <td>
					    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "email" %>
					  </td>
        			</tr>

				 	<tr>
			          <td>メールアドレス</td>
			          <td></td>
			          <td>
				    	<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
				 	  </td>
        			</tr>
        		  </tbody>
				</table><br />

				<div class="btn-box">
		        	<div class=" col-xs-9 actions">
				    	<%= f.submit "編集内容を保存する", class: "btn btn-success"%>
					</div>


					<div class="col-xs-3 actions">
						<%= link_to "退会する", public_customers_withdrawal_path, class: "btn btn-danger withdrawal_page_btn"%>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>
