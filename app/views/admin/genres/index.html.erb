<div class="row">
    <div class="col-lg-12">
      <h3 class="title">ジャンル一覧・追加</h3>


      <%= form_for(@genre, url: admin_genres_path) do |f| %>

        
        <% if @genre.errors.any? %>
          <div class="alert alert-warning">
            <ul>
              <% @genre.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!--ジャンル名-->
        <%= f.label :name, "ジャンル", class: "mr-3" %>
        <%= f.text_field :name, autofocus: true, class: "mr-3" %>

       
        <%= f.radio_button :is_delete, false, checked: true %>
        <%= f.label :is_delete, "有効", class: "mr-3" %>
        <%= f.radio_button :is_delete, true %>
        <%= f.label :is_delete, "無効", class: "mr-3" %>

        <!--追加ボタン-->
        <%= f.submit "追加", class: "btn btn-primary" %>

      <% end %>
    </div>
  </div>
  <br>
  <br>



  <div class="row">
    <div class="col-lg-6">

      <table class="table">

        <thead class="thead-light">
          <tr>
            <th>ジャンル</th>
            <th>状態</th>
            <th></th>
          </tr>
        </thead>

        <% @genres.each do |genre| %>
        <tbody>
          <tr>
            <td><%= genre.name %></td>
            <td><%= genre.is_delete ? '無効' : '有効' %></td>
            <td class="text-center"><%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-primary" %></td>
          </tr>
        </tbody>

        <% end %>
      </table>

    </div>
  </div>
</div>
