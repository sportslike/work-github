<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h3 class="title">ジャンル編集</h3>


     <%= form_for(@genre, url: admin_genre_path(@genre.id)) do |f| %>


        <!--エラー文-->
        <% if @genre.errors.any? %>
          <div class="alert alert-warning">
            <ul>
              <% @genre.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

       
        <%= f.label :name, "ジャンル", class: "mr-3" %>
        <%= f.text_field :name, autofocus: true, class: "mr-3" %>

        
        <%= f.radio_button :is_delete, false, checked: true %>
        <%= f.label :is_delete, "有効", class: "mr-3" %>
        <%= f.radio_button :is_delete, true %>
        <%= f.label :is_delete, "無効", class: "mr-3" %>

        
        <%= f.submit "変更を保存する", class: "btn btn-primary"%>

      <% end %>
    </div>
  </div>
</div>