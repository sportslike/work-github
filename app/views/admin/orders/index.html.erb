<div class="container">
  <div class="row">
    <div class="col-lg-12">
			<h1 class="title">注文履歴一覧</h1>
			<table class="table">
				<thead class="thead-light">
					<tr>
						<th>購入日時</th>
						<th>購入者</th>
						<th>注文個数</th>
						<th>注文ステータス</th>
					</tr>
				</thead>
				<tbody>
					<% @orders.each do |order| %>
					<tr>
						<td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order) %></td>
						<td><%= order.customer.last_name + order.customer.first_name %></td>
						<td><%= order.order_details.count %></td>
						<td><%= order.status %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
			<%= paginate @orders %>
    </div>
  </div>
</div>
